@model IEnumerable<YoYoWebApp.Data.Models.Athlete>


@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/LayoutApp.cshtml";
}


<div class="container pt-5">
    <div class="row">
        <div class="col-md-4">
            <div class="row">
                <div class="col">
                    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark border-bottom box-shadow mb-3" style="text-align: center; align-content: center; background-color:black ;align-items: center">
                        <div class="container" style="text-align:center;align-content:center">
                            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="text-align:center ;color:white">YoYo-Web-App</a>
                        </div>
                    </nav>
                </div>
            </div>

            <div class="container shadow-lg p-3 mb-5 bg-white rounded">

                <div class="container">
                    <div class="row">
                        <div class="col-md-4">

                            <div class="row">
                                <div class="col">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th valign="middle" align="left" style="text-align:left; vertical-align:central">
                                                    <h6>Name</h6>
                                                </th>
                                                <th valign="middle" align="left" style="text-align:center; vertical-align:central">
                                                    <h6>Level</h6>
                                                </th>
                                                <th valign="middle" align="left" style="text-align:center; vertical-align:central">
                                                    <h6>Shuttle </h6>
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td align="center">

                                                        @Html.ActionLink(@item.Name, "Edit", "Home", new { id = @item.AthleteId, level = @item.Level, shuttleLevel = @item.ShuttleLevel })

                                                    </td>
                                                    <td align="center">
                                                        @item.Level
                                                    </td>
                                                    <td align="center">
                                                        @item.ShuttleLevel
                                                    </td>
                                                    <td align="center">
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col" style="text-align:right">
                        <br />
                        <div>
                            <a asp-action="Index">Restart</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
<style>
    .btn-circle.btn-xl {
        width: 100px;
        height: 100px;
        padding: 10px 16px;
        border-radius: 55px;
        font-size: 12px;
        text-align: center;
        font-weight: 600;
    }

    .btn-curve.btn-xl {
        border-radius: 10px;
        text-align: center;
        font-size: 11px;
        width: 60px;
        height: 30px;
        vertical-align: central;
    }

    .navbar .nav > li > a.dropdown-toggle {
        position: relative;
        bottom: -1px;
        z-index: 1005;
        background: white;
        padding-bottom: 12px;
    }

    ul.nav li.dropdown:hover ul.dropdown-menu {
        /* ... */
        border-top: 1px solid #000;
    }
</style>